{
  "name": "agent-spaces-v2",
  "private": true,
  "workspaces": ["packages/*", "integration-tests"],
  "scripts": {
    "build": "bun run build:ordered",
    "build:ordered": "bun run --filter 'spaces-config' build && bun run --filter 'spaces-execution' build && bun run --filter '@lherron/agent-spaces' build",
    "build:parallel": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "bun run --filter '*' test",
    "test:integration": "bun test integration-tests/tests",
    "clean": "rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "rebuild": "bun run clean && bun run build",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "lefthook": "^1.11.5",
    "typescript": "^5.7.2"
  }
}
